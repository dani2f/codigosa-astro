---
import Header from "../components/basic/Header.astro";
import Footer from "../components/basic/Footer.astro";
import "../styles/styles.css";
const { typeFooter } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <link rel="icon" href="/favicon.svg?v=2" type="image/svg+xml" />

    <link
      rel="icon"
      type="image/svg+xml"
      href="/img/logos/logoPequenoNegro.svg"
      media="(prefers-color-scheme: light)"
    />

    <link
      rel="icon"
      href="/img/logos/logoPequenoBlanco.svg"
      type="image/svg+xml"
      media="(prefers-color-scheme: dark)"
    />

    <link
      rel="icon"
      type="image/svg+xml"
      href="/img/logos/logoPequenoBlanco.svg"
      media="(prefers-color-scheme: dark)"
    />

    <meta property="og:image" content="/img/logos/logoPequenoNegro.png" />
    <meta name="twitter:image" content="/img/logos/logoPequenoNegro.png" />

    <slot name="head" />
  </head>
  <body>
    <Header />
    <slot name="main" />
    <a class="flecha" href="#">
      <svg class="svgIcon" viewBox="0 0 384 512">
        <path
          d="M214.6 41.4c-12.5-12.5-32.8-12.5-45.3 0l-160 160c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L160 141.2V448c0 17.7 14.3 32 32 32s32-14.3 32-32V141.2L329.4 246.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3l-160-160z"
        >
        </path>
      </svg>
    </a>
    <script src="../scripts/individualProject.js"></script>
    <script src="../scripts/script.js"></script>
    <Footer type=`${typeFooter}` />
  </body>
</html>
